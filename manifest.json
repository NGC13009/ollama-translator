{
  "manifest_version": 3,
  "name": "Ollama Web Translator",
  "version": "1.0",
  "description": "Translate web pages using a local Ollama instance.",
  "permissions": [
    "storage", // 允许插件使用 chrome.storage API 来保存用户设置
    "activeTab", // 允许插件访问当前活动的标签页
    "scripting", // 允许插件在标签页中注入脚本
    "contextMenus" // (可选) 允许右键菜单触发翻译
  ],
  "host_permissions": [
    "<all_urls>" // 允许后台脚本向任何URL发起请求。为了安全，最好限制为 "http://localhost:11434/" 或用户指定的URL
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ], // 在所有页面上都准备好注入
      "js": [
        "utils.js",
        "content_script.js"
      ]
    }
  ]
}